<odoo>
    <!-- ================= ACTIONS ================= -->
    <record id="action_b2b_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">b2b.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_b2b_product" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">b2b.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_b2b_customer" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">b2b.customer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_b2b_order" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">b2b.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_b2b_payment" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="res_model">b2b.payment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ================= MENÜ ================= -->
    <!-- Ana Menü -->
    <menuitem id="menu_b2b_root" name="B2B Phone Sales" sequence="10"/>

    <!-- Alt Menüler -->
    <menuitem id="menu_b2b_category" name="Categories" parent="menu_b2b_root" action="action_b2b_category" sequence="1"/>
    <menuitem id="menu_b2b_product" name="Products" parent="menu_b2b_root" action="action_b2b_product" sequence="2"/>
    <menuitem id="menu_b2b_customer" name="Customers" parent="menu_b2b_root" action="action_b2b_customer" sequence="3"/>
    <menuitem id="menu_b2b_order" name="Orders" parent="menu_b2b_root" action="action_b2b_order" sequence="4"/>
    <menuitem id="menu_b2b_payment" name="Payments" parent="menu_b2b_root" action="action_b2b_payment" sequence="5"/>
</odoo>
